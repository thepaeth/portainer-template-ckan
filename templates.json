
{

    "version": "2",
    "templates": [
        {
            "type": 2,
            "title": "CKAN 2.9.2",
            "description": "CKAN setup And configuretion for thai GDC",
            "note": "Deploys a CKAN instance for thai GDC",
            "categories": [
                "CMS"
            ],
            "platform": "linux",
            "logo": "https://gitlab.nectec.or.th/uploads/-/system/project/avatar/639/logo_ckan_opend.jpg?width=64",
            "repository": {
                "url": "https://gitlab.nectec.or.th/opend/portainer-templates",
                "stackfile": "ckan/docker-stack.yml"
            },
            "env": [
                {
                    "name": "AGENT",
                    "label": "Agency name",
                    "description": "ชื่อย่อหน่วยงาน ภาษาอังกฤษเท่านั้น"
                },
                {
                    "name": "POSTGRES_USER",
                    "label": "POSTGRES USER",
                    "description": "ชื่อผู้ใช้ฐานข้อมูลสำหรับ CKAN Instance",
                    "default": "ckan_${AGENT}"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "label": "POSTGRES PASSWORD",
                    "description": "รหัสผ่านสำหรับผู้ใช้ฐานข้อมูล",
                    "default": "public"
                },
                {
                    "name": "DATASTORE_READONLY_USER",
                    "label": "DATASTORE READONLY USER",
                    "default": "datastore_agency"
                },
                {
                    "name": "DATASTORE_READONLY_PASSWORD",
                    "label": "DATASTORE READONLY PASSWORD",
                    "default": "public"
                },
                {
                    "name": "POSTGRES_HOST",
                    "default": "db",
                    "preset": true
                },
                {
                    "name": "POSTGRES_SERVER",
                    "label": "POSTGRES SERVER",
                    "default": "192.168.45.74"
                },
                {
                    "name": "SOLR_SERVER",
                    "label": "SOLR SERVER",
                    "default": "192.168.45.74"
                },
                {
                    "name": "CKAN_VERSION",
                    "label": "CKAN VERSION",
                    "select": [
                        {
                            "text": "CKAN 2.9 with xloader",
                            "value": "2.9-xloader",
                            "default": true
                        }
                    ]
                },
                {
                    "name": "DEFAULT_URL",
                    "label": "DEFAULT URL"
                },
                {
                    "name": "CKAN_SYSADMIN_NAME",
                    "label": "CKAN SYSADMIN NAME",
                    "default": "ckan_admin"
                },
                {
                    "name": "CKAN_SYSADMIN_PASSWORD",
                    "label": "CKAN SYSADMIN PASSWORD",
                    "default": "ckan@min!1234"
                },
                {
                    "name": "CKAN_SYSADMIN_EMAIL",
                    "label": "CKAN SYSADMIN EMAIL",
                    "default": "mail@a.b"
                },
                {
                    "name": "CKAN_PLUGINS",
                    "label": "CKAN PLUGS",
                    "default": "envvars stats image_view text_view recline_view resource_proxy webpage_view datastore xloader thai_gdc scheming_datasets pdf_view hierarchy_display hierarchy_form dcat dcat_json_interface structured_data dga_stats"
                },
                {
                    "name": "NODE_ROLE",
                    "label": "CKAN NODE ROLE",
                    "default": "045073-U"
                }
            ]
        }
    ]

}
